<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false" colors="true" convertNoticesToExceptions="true">
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
        <blacklist>
            <directory suffix=".php">./vendor</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-html" target="coverage" title="Kata 99 Bottles" charset="UTF-8"/>
    </logging>
    <testsuites>
        <testsuite name="Kata 99 Bottles Test Suite">
            <directory>./test/</directory>
        </testsuite>
    </testsuites>
</phpunit>